@model CfirstApproch.Models.Employee

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, rgba(255, 193, 7, 0.8), rgba(40, 167, 69, 0.8));
            color: black;
            font-family: Arial, sans-serif;
            
        }

        .edit-container {
            background: rgba(255, 255, 255, 0.9);
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            animation: fadeIn 1s ease;
            max-width: 600px;
            margin: 50px auto;
        }

            .edit-container h1 {
                color: #333;
                text-align: center;
                font-size: 28px;
                margin-bottom: 20px;
            }

            .edit-container h4 {
                color: #555;
                font-size: 24px;
                margin-bottom: 15px;
                text-align: center;
            }

            .edit-container hr {
                border-top: 2px solid #ccc;
            }

            .edit-container .form-group {
                margin-bottom: 15px;
            }

            .edit-container .form-control {
                border-radius: 5px;
                border: 1px solid #ccc;
                padding: 10px;
                transition: border-color 0.3s, box-shadow 0.3s;
            }

                .edit-container .form-control:focus {
                    border-color: #007bff;
                    box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
                }

            .edit-container .btn {
                font-size: 16px;
                padding: 10px;
                width: 100%;
            }

            .edit-container .btn-primary {
                background-color: #007bff;
                border-color: #007bff;
            }

                .edit-container .btn-primary:hover {
                    background-color: #0056b3;
                    border-color: #004085;
                }

            .edit-container a {
                text-decoration: none;
                font-size: 16px;
                color: #007bff;
                display: inline-block;
                margin-top: 15px;
                transition: color 0.3s, transform 0.2s;
            }

                .edit-container a:hover {
                    color: #0056b3;
                    transform: scale(1.05);
                }

    </style>
</head>
<body>
    <div class="container">
        <div class="edit-container">
            @* <h1>@ViewData["Title"]</h1> *@
            <h1>Edit Employee</h1>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Gender" class="control-label"></label>
                    <input asp-for="Gender" class="form-control" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save Changes" class="btn btn-primary" />
                </div>
            </form>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>
